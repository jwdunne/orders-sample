{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "bundle": {
            "dependsOn": ["^build"],
            "outputs": ["dist/lambda/**"]
        },
        "deploy": {
            "dependsOn": ["bundle"],
            "cache": false
        }
    }
}
